<br/>

<h1 align="center">Administration</h1>

<% if not @is_admin then %>

  <p>Diese Seite kann nur von Administratoren aufgerufen werden</p>
  <%= link_to "weiter", root_path %>
<% else %>
  
	<center>
	<br/>
	<h2>Benutzer</h2>
	<br/>	
	
	<table border="1" style="width:70%">
		<tr>
			<th style="height:30px">Admin</th>
			<th>Name</th>
			<th>Klassenstufe</th>
			<th>Kontakt-Infos</th>
			<th>letzte Aktivität</th>
			<th>löschen</th>
			<th>Admin-Status ändern</th>
			<th>editieren</th>
	</tr>
	
	<% @users.each do |user| %>
		<tr>
	      <td align="center"><% if user.is_admin then%>
			    <%= "X" %>
			  <% end %>
		  </td>
		  <td><%= user.name  %></td>
		  <td align="center"><%= user.class_level %></td>
		  <td><%= user.contact_info %></td>
		  <td align="center"><%= user.last_activity %></td>
          <td align="center">
		    <% if user.id != 1 then %>
		      <%= link_to "delete", users_path(user), :method => :delete %>
			<% end %>   
		  </td>
		  <td align="center">
		    <% if user.id != 1 then %>
		      <%= link_to "change", change_admin_status_path(user), :method => :patch %>
			<% end %> 
		  </td>
		  <td align="center">
		    <%= link_to "edit", users_path(user) %>
		  </td>
		  	  
        </tr>
       <% end %>
	
	</table>
	
	<br/>
	
	<h2>Benutzer neu anlegen</h2>

	<br/>
	<%= form_for @new_user, :url => admin_path do |f| %>
		<%= f.text_field :name, :size=>"30", :maxlength=>"30", :placeholder=>"Benutzername" %>
		<br/>
		<br/>
		<%= f.text_field :password, :type=>"password", :size=>"30", :maxlength=>"40", :placeholder=>"Passwort" %>
		<br/>
		<br/>
		<%= f.submit "Save", :style=> "width: 168px; height: 25px" %>
	<% end %>
	</center>

<% end %>
